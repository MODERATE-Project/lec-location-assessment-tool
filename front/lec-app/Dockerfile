FROM node:20-alpine AS build

ARG VITE_MUNICIPALITIES_API_URL
ENV VITE_MUNICIPALITIES_API_URL $VITE_MUNICIPALITIES_API_URL

ARG VITE_BUILDINGS_API_URL
ENV VITE_BUILDINGS_API_URL $VITE_BUILDINGS_API_URL

ARG VITE_GEOSERVER_API_URL
ENV VITE_GEOSERVER_API_URL $VITE_GEOSERVER_API_URL

WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM nginx:1.25 AS prod
COPY --from=build /app/dist /usr/share/nginx/html
COPY default.conf.template /etc/nginx/templates/default.conf.template