FROM node:16-alpine AS build

ARG REACT_APP_MUNICIPALITIES_API_URL
ENV REACT_APP_MUNICIPALITIES_API_URL $REACT_APP_MUNICIPALITIES_API_URL

ARG REACT_APP_BUILDINGS_API_URL
ENV REACT_APP_BUILDINGS_API_URL $REACT_APP_BUILDINGS_API_URL

ARG REACT_APP_GEOSERVER_API_URL
ENV REACT_APP_GEOSERVER_API_URL $REACT_APP_GEOSERVER_API_URL

WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM nginx:1.25 as prod
COPY --from=build /app/build /usr/share/nginx/html
COPY default.conf.template /etc/nginx/templates/default.conf.template